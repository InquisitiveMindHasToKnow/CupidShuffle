<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DateChoiceConfirmationActivity">

    <TextView
        android:id="@+id/date_selection_message_textview"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:text="Response Sent!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:id="@+id/date_selection_imageview"
        android:layout_width="150dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/date_selection_message_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/greencheckmark"
        />


</android.support.constraint.ConstraintLayout>