<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainUserProfile">

    <ImageView
        android:id="@+id/main_user_profile_imageview"
        android:layout_width="match_parent"
        android:background="#000"
        android:src="@drawable/ronaldomanu2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="210dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/main_user_profile_userinfo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_user_profile_imageview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_username_textview"
                        android:text="Germane To Jermaine"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:id="@+id/main_user_profile_location_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Brooklyn, N.Y."
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/main_user_profile_occupation_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Football Legend"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/main_user_profile_bio_textview"
                        android:text="I love marshmallow toffee I love lemon drops candy canes cake chocolate jelly beans. Gummies icing marzipan I love powder dessert chocolate. Cake cake topping cupcake marzipan I love caramels marshmallow marzipan."
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_user_profile_connects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_user_profile_personal_stuff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_user_profile_connect_suggestion_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="People You May Be Interested In"
                android:textAlignment="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/main_user_profile_first_connect"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/connect1"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        app:civ_border_color="#EEEEEE"

                        app:civ_border_width="4dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="10"
                        app:civ_shadow_color="@color/textPrimaryColor"/>

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/main_user_profile_second_connect"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/connect3"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        app:civ_border_color="#EEEEEE"
                        android:layout_marginStart="24dp"
                        app:civ_border_width="4dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="10"
                        app:civ_shadow_color="@color/textPrimaryColor"
                        android:layout_marginLeft="24dp" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/main_user_profile_three_connect"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="24dp"
                        android:src="@drawable/connect22"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        app:civ_border_color="#EEEEEE"
                        app:civ_border_width="4dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="10"
                        app:civ_shadow_color="@color/textPrimaryColor"
                        android:layout_marginLeft="24dp" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/main_user_profile_fourth_connect"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/connect4"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        app:civ_border_color="#EEEEEE"
                        android:layout_marginStart="24dp"
                        app:civ_border_width="4dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="10"
                        app:civ_shadow_color="@color/textPrimaryColor"
                        android:layout_marginLeft="24dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_user_profile_personal_stuff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_user_profile_userinfo_card"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/messagesicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/messageicon2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_message_hint_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages:"
                        />


                    <TextView
                        android:id="@+id/main_user_profile_message_amount_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="22222"
                        android:textSize="12sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="90dp">

                <ImageView
                    android:id="@+id/connecticon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/connect2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_connect_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" Shuffle:"
                        />

                    <TextView
                        android:id="@+id/main_user_profile_connect_amount_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                       android:text="44444" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="60dp">

                <ImageView
                    android:id="@+id/requesticon"
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:src="@drawable/requesticon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_request_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Requests:"
                        />

                    <TextView
                        android:id="@+id/main_user_profile_request_amount_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:text="55555" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>