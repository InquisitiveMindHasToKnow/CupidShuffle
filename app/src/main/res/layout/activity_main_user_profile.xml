<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainUserProfile">

    <ImageView
        android:id="@+id/main_user_profile_imageview"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#000"
        android:src="@drawable/ronaldomanu2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/main_user_profile_userinfo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_user_profile_imageview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_username_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Germane To Jermaine"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/main_user_profile_location_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Brooklyn, N.Y."
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/main_user_profile_occupation_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Football Legend"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/main_user_profile_bio_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="I love marshmallow toffee I love lemon drops candy canes cake chocolate jelly beans. Gummies icing marzipan I love powder dessert chocolate. Cake cake topping cupcake marzipan I love caramels marshmallow marzipan."
                        android:textAlignment="center"
                        android:textSize="16sp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_user_profile_connects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_user_profile_personal_stuff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_user_profile_connect_suggestion_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="People You May Be Interested In"
                android:textAlignment="center" />


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_first_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="1dp"
                            android:src="@drawable/connectone1"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_second_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/connectwo2"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_third_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/connectthree3"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_fourth_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/connectfour4"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_fifth_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/connectfive5"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_sixth_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/connectsix6"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_seventh_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/connectseven7"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/main_user_profile_eighth_connect"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:elevation="1dp"
                            android:src="@drawable/connecteight8"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="4dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/textPrimaryColor"
                            app:civ_shadow_radius="10" />


                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/main_user_profile_personal_stuff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_user_profile_userinfo_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main_user_profile_messages_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/messagesicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/messageicon2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_message_hint_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="Messages " />


                    <TextView
                        android:id="@+id/main_user_profile_message_amount_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="And Requests"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_user_profile_connect_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/connecticon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cool_cupid" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_connect_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text=" Shuffle" />



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_user_profile_request_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/requesticon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/requesticon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_user_profile_request_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text=" View All Users" />



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>