<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RespondToDMActivity">

    <TextView
        android:id="@+id/respond_to_dm_requestors_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:text=" Eliana Pererra's Message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.CardView
        android:id="@+id/respond_to_dm_cardview"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:backgroundTint="@color/backgroundPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/respond_to_dm_requestors_name_textview">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
     <TextView
         android:id="@+id/dm_requestors_name_on_card"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="24sp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         android:text="The Sender:"/>

    <TextView
        android:id="@+id/dm_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/dm_requestors_name_on_card"
        android:text="Hi, wassup my guy? Let's see what's good!"
       />

    <TextView
        android:id="@+id/you_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You: "
        android:gravity="end"
        android:textSize="24sp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@id/dm_textview"
        app:layout_constraintRight_toRightOf="parent"

        />

    <EditText
        android:id="@+id/respond_to_dm_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_marginTop="8dp"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@id/you_textview"
        />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/respond_to_dm_button_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/respond_to_dm_cardview"
        app:layout_constraintLeft_toLeftOf="parent">


        <Button
            android:id="@+id/send_response_to_dm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"/>


        <Button
            android:id="@+id/cancel_response_to_dm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>