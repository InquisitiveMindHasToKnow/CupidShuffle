<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.SentMessageConfirmationActivity">

    <TextView
        android:id="@+id/message_confirmation_sent_textview"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:text="Response Sent!"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:id="@+id/green_checkmark_imageview"
        android:layout_width="150dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/message_confirmation_sent_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/greencheckmark"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toBottomOf="@id/green_checkmark_imageview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp">

        <Button
            android:id="@+id/back_to_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back To My Profile"/>

        <Button
            android:id="@+id/keep_shuffing_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Shuffling"/>




    </LinearLayout>


</android.support.constraint.ConstraintLayout>