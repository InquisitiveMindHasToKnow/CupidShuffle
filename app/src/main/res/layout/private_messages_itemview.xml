<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/backgroundPrimary"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/private_message_senders_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2C2C2C"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/private_message_senders_message_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/private_message_accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/roundedbuttons"
                android:text="Respond"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/private_message_reject_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/roundedbuttons"
                android:text="Reject"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>